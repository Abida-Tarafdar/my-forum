<!DOCTYPE html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Topics - <%= forumName %></title>
</head>
<body>
    <h1>All Topics</h1>
    <table>
        <thead>
            <tr>
                <th>Title</th>
                <th>Details</th>
            </tr>
        </thead>
        <tbody>
            <% availableTopics.forEach(function(topic) { %>
                <tr>
                    <td><%= topic.title %></td>
                    <td><a href="/topicdetails/<%= topic.id %>">View Details</a></td>
                </tr>
            <% }); %>
        </tbody>
    </table>

    <nav>
        <ul>
            <li><a href="/">Home</a></li>
            <li><a href="/about">About</a></li>
            <li><a href="/topics">Topics</a></li>
            <li><a href="/users">Users</a></li>
            <li><a href="/posts">Posts</a></li>
            <li><a href="/addpost">Add Post</a></li>
        </ul>
    </nav>
</body>
</html>
